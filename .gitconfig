[user]
	name = Adam Legg
        email = adam.legg@gmail.com

[alias]
        a   = add
	aa  = add --all
	aam = commit --amend --all
	amm = commit --amend
	ap  = add --all --patch
	b   = branch
	c   = commit
	ca  = commit --amend -C HEAD
	cam = commit --all --message
	cm  = commit --message
	co  = checkout
	cp  = cherry-pick
	d   = diff
	l   = log --pretty='format:%Cgreen%h%Creset %an - %s' --graph
	lc  = local-commits
	p   = pull --rebase
	pop = reset head^
	r   = rebase
	ra  = rebase --abort
	rc  = rebase --continue
	ri  = rebase --interactive
	rix = rebase --interactive HEAD~10
	rr  = reset --hard HEAD
	s   = status --short --branch

[branch]
	autosetuprebase = always

[branch "master"]
	merge = refs/heads/master
	rebase = true
	remote = origin

[color]
	ui = true
